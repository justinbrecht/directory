<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingOne">
      <h4 class="panel-title">
        <!-- <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne"> -->
          <%= @user.displayname %>
        <!-- </a> -->

      </h4>
    </div>

<div class="btn-group pull-right ">
    <%= link_to 'Back', users_path, :class => 'btn btn-primary'  %>
    <% if UserPolicy.new(current_user,@user).import?  %>
      <%= link_to "<i class='fa fa-refresh'></i> LDAP".html_safe, import_users_path(u: @user.username), :method => :post, :class => 'btn btn-primary' %>
    <% end %>
    <div class="pull-right">
      <% if UserPolicy.new(current_user,@user).update? %>
            <%= render 'access_level_form', user: @user%>
      <% end %>
    </div>
</div>

    <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
      <div class="panel-body">
        <ul>
          <li>
            <strong>Access Level:</strong>
            <%= @user.access_level %>
          </li>
          <li>
            <strong>Object guid:</strong>
            <%= @user.object_guid %>
          </li>
          <li>
            <strong>Username:</strong>
            <%= @user.username %>
          </li>
          <li>
            <strong>Ldap imported at:</strong>
            <%= @user.ldap_imported_at %>
          </li>
          <li>
            <strong>Ldap imported at:</strong>
            <%= @user.ldap_imported_at %>
          </li>
          <li>
            <strong>Ldap attributes:</strong>
            <ul>
          	  <% @user.ldap_attributes.each do |key, value| %>
            		<%= content_tag :li do %>
            			<%= content_tag :strong, "#{key}: " %>
                  <% if key == "memberof" %>
                    <% groups = eval(value) %>
                    <ul>
                        <% groups.each do |v| %>
                          <%= content_tag :li do %>
                            <%= v.split(",")[0].gsub("CN=","")  %>
                          <% end %>
                        <% end %>
                    </ul>
                  <% else %>
                     <%= value %>
                  <% end %>
            		<% end %>
          	  <% end %>
          	</ul>
          </li>
        </ul>
      </div>
    </div>

  </div>

</div>
