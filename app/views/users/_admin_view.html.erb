<div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingOne">
      <h4 class="panel-title">
        <!-- <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne"> -->
          <%= @user.displayname %>
        <!-- </a> -->

      </h4>
    </div>



    <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
      <div class="panel-body">
        <div class="col-md-7">
          <ul>
            <li>
              <strong>Access Level:</strong>
              <%= @user.access_level %>
            </li>
            <li>
              <strong>Object guid:</strong>
              <%= @user.object_guid %>
            </li>
            <li>
              <strong>Username:</strong>
              <%= @user.username %>
            </li>
            <li>
              <strong>Ldap imported at:</strong>
              <%= @user.ldap_imported_at %>
            </li>
            <li>
              <strong>Ldap attributes:</strong>
              <ul>
            	  <% @user.ldap_attributes.each do |key, value| %>
              		<%= content_tag :li do %>
              			<%= content_tag :strong, "#{key}: " %>
                    <% if key == "memberof" %>
                      <%= content_tag :ul do -%>
                          <% @user.groups.each do |group| %>
                            <%= content_tag :li do %>
                              <%= link_to group.samaccountname, group_path(group) %>
                            <% end %>
                          <% end %>
                        <% end %>
                    <% else %>
                       <%= value %>
                    <% end %>
              		<% end %>
            	  <% end %>
            	</ul>
            </li>
          </ul>
        </div>
        <div class="col-md-5">
          <% if File.file?(Rails.root+"public/images/#{@user.username}.jpg") %>
            <img class="img-responsive pull-right" src="/images/<%= @user.username %>.jpg" alt="<%= @user.displayname %>" title="<%= @user.displayname %>" >
          <% end %>
        </div>
      </div>
    </div>
</div>

<div class="col-xs-12 text-center">
    <br />
    <%= link_to 'Back', users_path, :class => 'btn btn-primary', :role  => "button" %>

    <% if UserPolicy.new(current_user,@user).import?  %>
      <%= link_to "<i class='fa fa-refresh'></i> LDAP".html_safe, import_users_path(u: @user.username), :method => :post, :class => 'btn btn-primary', :role  => "button" %>
    <% end %>
    <br />
    <br />
    <% if UserPolicy.new(current_user,@user).update? %>
            <%= render 'access_level_form', user: @user%>
    <% end %>
    <br />
</div>
<div class="clearfix"></div>
