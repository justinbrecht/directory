<div class="panel panel-default">
  <div class="panel-heading"><%= @group.samaccountname %></div>
  <div class="panel-body">
    <form class="form-horizontal">
      <div class="form-group">
        <label for="displayname" class="col-sm-2 control-label">Display name</label>
        <div class="col-sm-10">
          <input type="email" class="form-control" id="Samaccountname" placeholder="Displayname" value="<%= @group.displayname %>" readonly >
        </div>
      </div>
      <div class="form-group">
        <label for="inputEmail" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
          <input type="email" class="form-control" id="inputEmail" placeholder="Email" value="<%= @group.mail %>" readonly >
        </div>
      </div>
    </form>
  </div>
</div>

<div class="text-center" style="padding-bottom: 20px; ">
  <!-- <% link_to 'Edit', edit_group_path(@group), class: 'btn btn-primary' %> | -->
  <%= link_to 'Back', groups_path, class: 'btn btn-primary' %>
</div>


<div class="panel panel-default">
  <div class="panel-heading"><%= @group.samaccountname %></div>

    <table class="table">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Email</th>
          <th>Site</th>
        </tr>
      </thead>
      <tbody>
        <% @group.users.each_with_index do |user,i| %>
          <tr>
            <td><%= i+1 %>.</td>
            <td><%= link_to user.displayname, user_path(user) %></td>
            <td><%= user.mail %></td>
            <!-- <td><%  link_to user.physicaldeliveryofficename, users_path(:site => URI.encode(user.physicaldeliveryofficename)) %></td> -->
            <td><%= user.physicaldeliveryofficename %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>

<div class="text-center" style="padding-bottom: 20px; ">
  <%= link_to 'Back', groups_path, class: 'btn btn-primary' %>
</div>
